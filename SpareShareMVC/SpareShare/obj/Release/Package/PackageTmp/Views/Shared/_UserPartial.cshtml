@if (Session["usrId"] != null)
{
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("主页", "Index", "User")</li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    我的捐赠<span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("查询受助请求", "SearchQuests", "Donate")</li>
                    <li>@Html.ActionLink("上传捐赠物品", "UploadThings", "Donate")</li>
                    <li>@Html.ActionLink("查看我的捐赠", "MyThingsList", "Donate")</li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    我的受助<span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("查询捐赠物品", "SearchThings", "Receive")</li>
                    <li>@Html.ActionLink("发布受助请求", "UploadQuests", "Receive")</li>
                    <li>@Html.ActionLink("查看我的受助", "MyQuestsList", "Receive")</li>
                    @*<li>@Html.ActionLink("确认领取物品", "SelectHistoryThings", "SSReceive")</li>*@
                </ul>
            </li>
            @if ((string)Session["isAdmin"] == "Y")
            {
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        管理平台<span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("审核捐赠物品", "CheckThings", "Admin")</li>
                        <li>@Html.ActionLink("审核受助请求", "CheckQuests", "Admin")</li>
                        <li>@Html.ActionLink("管理报表", "AdminCharts", "Admin")</li>
                    </ul>
                </li>
            }

        </ul>
        @Html.Partial("_LoginPartial")
    </div>
}
else
{
    <div class="navbar-collapse collapse">
        @Html.Partial("_LoginPartial")
    </div>
}